@model QuanLyMayBay.Models.Admin.QLPersonViewModel

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mx-auto px-4 py-6 max-w-7xl">
    <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-2 flex items-center">
            <i class="fas fa-database text-blue-600 mr-3"></i>
            Quản Lý Sao Lưu & Phục Hồi Dữ Liệu
        </h1>
        <p class="text-gray-600">Thực hiện sao lưu (Backup) và phục hồi (Restore) cơ sở dữ liệu hệ thống.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center space-x-3 mb-6">
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-cloud-download-alt text-green-600 text-xl"></i>
                </div>
                <div>
                    <h2 class="text-xl font-bold text-gray-800">Sao Lưu Dữ Liệu</h2>
                    <p class="text-sm text-gray-500">Tạo bản sao lưu an toàn cho Database</p>
                </div>
            </div>

            <div class="bg-green-50 border border-green-200 rounded-lg p-4 mb-6">
                <h4 class="font-semibold text-green-800 mb-2">Lưu ý quan trọng:</h4>
                <ul class="list-disc list-inside text-sm text-green-700 space-y-1">
                    <li>File backup sẽ được lưu tại thư mục server.</li>
                    <li>Nên thực hiện sao lưu định kỳ hàng ngày.</li>
                    <li>File có định dạng <strong>.bak</strong>.</li>
                </ul>
            </div>

            <form action="@Url.Action("BackupDatabase", "Admin")" method="post">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Tên file backup (Tùy chọn)</label>
                    <div class="flex">
                        <span class="inline-flex items-center px-3 rounded-l-md border border-r-0 border-gray-300 bg-gray-50 text-gray-500 text-sm">
                            QLMayBay_
                        </span>
                        <input type="text" name="backupName" placeholder="@DateTime.Now.ToString("yyyyMMdd_HHmm")"
                               class="flex-1 min-w-0 block w-full px-3 py-2 rounded-none rounded-r-md border border-gray-300 focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Mặc định: QLMayBay_yyyyMMdd_HHmm.bak</p>
                </div>

                <button type="submit" class="w-full flex justify-center items-center px-4 py-3 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-colors">
                    <i class="fas fa-save mr-2"></i> Thực hiện Sao Lưu Ngay
                </button>
            </form>
        </div>

        <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-6">
            <div class="flex items-center space-x-3 mb-6">
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-cloud-upload-alt text-blue-600 text-xl"></i>
                </div>
                <div>
                    <h2 class="text-xl font-bold text-gray-800">Phục Hồi Dữ Liệu</h2>
                    <p class="text-sm text-gray-500">Khôi phục Database từ file backup</p>
                </div>
            </div>

            <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
                <h4 class="font-semibold text-red-800 mb-2">Cảnh báo nguy hiểm:</h4>
                <ul class="list-disc list-inside text-sm text-red-700 space-y-1">
                    <li>Hành động này sẽ <strong>xóa toàn bộ dữ liệu hiện tại</strong>.</li>
                    <li>Hệ thống sẽ ngắt kết nối trong quá trình phục hồi.</li>
                    <li>Chỉ thực hiện khi thực sự cần thiết.</li>
                </ul>
            </div>

            <form action="@Url.Action("RestoreDatabase", "Admin")" method="post" enctype="multipart/form-data">
                <div class="mb-6">
                    <label class="block text-sm font-medium text-gray-700 mb-2">Chọn file Backup (.bak)</label>
                    <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 border-dashed rounded-lg hover:bg-gray-50 transition-colors cursor-pointer relative">
                        <div class="space-y-1 text-center">
                            <i class="fas fa-file-archive text-gray-400 text-3xl mb-2"></i>
                            <div class="text-sm text-gray-600">
                                <label for="file-upload" class="relative cursor-pointer bg-white rounded-md font-medium text-blue-600 hover:text-blue-500 focus-within:outline-none">
                                    <span>Tải file lên</span>
                                    <input id="file-upload" name="backupFile" type="file" class="sr-only" accept=".bak" required onchange="updateFileName(this)">
                                </label>
                                <p class="pl-1">hoặc kéo thả vào đây</p>
                            </div>
                            <p class="text-xs text-gray-500" id="file-name-display">Chưa chọn file nào</p>
                        </div>
                    </div>
                </div>

                <button type="submit" onclick="return confirm('CẢNH BÁO: Bạn có chắc chắn muốn phục hồi dữ liệu? Dữ liệu hiện tại sẽ bị mất vĩnh viễn!')"
                        class="w-full flex justify-center items-center px-4 py-3 border border-transparent text-sm font-medium rounded-lg shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors">
                    <i class="fas fa-history mr-2"></i> Tiến Hành Phục Hồi
                </button>
            </form>
        </div>
    </div>

    @if (TempData["Message"] != null)
    {
        <div id="notification" class="fixed bottom-4 right-4 bg-gray-800 text-white px-6 py-4 rounded-lg shadow-lg z-50 animate-fade-in-up flex items-center">
            <i class="fas fa-info-circle mr-3 text-blue-400"></i>
            <span>@TempData["Message"]</span>
            <button onclick="this.parentElement.style.display='none'" class="ml-4 text-gray-400 hover:text-white">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }
</div>

<script>
    function updateFileName(input) {
        const fileNameDisplay = document.getElementById('file-name-display');
        if (input.files && input.files.length > 0) {
            fileNameDisplay.textContent = input.files[0].name;
            fileNameDisplay.classList.add('text-green-600', 'font-medium');
        } else {
            fileNameDisplay.textContent = 'Chưa chọn file nào';
            fileNameDisplay.classList.remove('text-green-600', 'font-medium');
        }
    }

    // Tự động ẩn thông báo sau 5s
    setTimeout(function () {
        const noti = document.getElementById('notification');
        if (noti) noti.style.display = 'none';
    }, 5000);
</script>