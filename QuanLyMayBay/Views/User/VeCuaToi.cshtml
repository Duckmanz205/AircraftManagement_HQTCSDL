@model QuanLyMayBay.Models.MyTicketsViewModel

@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    <div class="mb-6 sm:mb-8">
        <div class="flex items-center mb-3">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-blue-100 rounded-lg flex items-center justify-center mr-3">
                <i class="fas fa-shopping-cart text-blue-600 text-lg sm:text-xl"></i>
            </div>
            <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Vé của tôi</h1>
        </div>
        <p class="text-gray-600 text-sm sm:text-base">Quản lý vé đang giữ chỗ và vé đã thanh toán của bạn</p>
    </div>

    <!-- Tabs -->
    <div class="mb-6">
        <div class="border-b border-gray-200">
            <nav class="flex space-x-4 sm:space-x-8">
                <button onclick="switchTab('unpaid')" id="tab-unpaid" class="tab-button active py-3 px-2 sm:px-4 border-b-2 border-blue-600 text-blue-600 font-semibold text-sm sm:text-base whitespace-nowrap">
                    <i class="fas fa-clock mr-2"></i>Chưa thanh toán
                    <span class="ml-2 bg-blue-600 text-white text-xs px-2 py-1 rounded-full">@Model.UnpaidOrders.Count</span>
                </button>
                <button onclick="switchTab('paid')" id="tab-paid" class="tab-button py-3 px-2 sm:px-4 border-b-2 border-transparent text-gray-600 hover:text-gray-900 font-medium text-sm sm:text-base whitespace-nowrap">
                    <i class="fas fa-check-circle mr-2"></i>Đã thanh toán
                    <span class="ml-2 bg-gray-200 text-gray-700 text-xs px-2 py-1 rounded-full">@Model.PaidOrders.Count</span>
                </button>
            </nav>
        </div>
    </div>

    <!-- ====================== CHƯA THANH TOÁN ====================== -->
    <div id="unpaid-section" class="tab-content">
        @if (!Model.UnpaidOrders.Any())
        {
            <div class="text-center py-16 text-gray-500">
                <i class="fas fa-inbox text-6xl mb-4 text-gray-300"></i>
                <p class="text-lg">Bạn chưa có vé nào đang giữ chỗ</p>
            </div>
        }
        else
        {
            foreach (var order in Model.UnpaidOrders)
            {
                var remainingSeconds = Math.Max(0, (int)(order.ThoiGianGiuCho - DateTime.Now).TotalSeconds);
                var orderId = order.MaGioHang.Trim();

                <div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-4 overflow-hidden hover:shadow-md transition-shadow" data-order="@orderId">
                    <div class="p-4 sm:p-6">
                        <!-- Countdown giữ chỗ -->
                        <div class="bg-gradient-to-r from-red-50 to-orange-50 border border-red-200 rounded-lg p-3 sm:p-4 mb-4">
                            <div class="flex items-center justify-between flex-wrap gap-2">
                                <div class="flex items-center">
                                    <i class="fas fa-hourglass-half text-red-600 mr-2 sm:mr-3"></i>
                                    <span class="text-sm sm:text-base font-semibold text-red-700">Thời gian giữ chỗ còn lại:</span>
                                </div>
                                <div class="flex items-center space-x-2 sm:space-x-3">
                                    <div class="bg-white px-3 py-2 rounded-lg shadow-sm">
                                        <div class="text-xl sm:text-2xl font-bold text-red-600 countdown-minutes" data-seconds="@remainingSeconds">00</div>
                                        <div class="text-xs text-gray-600 text-center">phút</div>
                                    </div>
                                    <div class="text-xl sm:text-2xl font-bold text-red-600">:</div>
                                    <div class="bg-white px-3 py-2 rounded-lg shadow-sm">
                                        <div class="text-xl sm:text-2xl font-bold text-red-600 countdown-seconds" data-seconds="@remainingSeconds">00</div>
                                        <div class="text-xs text-gray-600 text-center">giây</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin đơn hàng -->
                        <div class="flex items-start justify-between mb-4">
                            <div class="flex items-start">
                                <input type="checkbox"
                                       class="ticket-checkbox w-5 h-5 text-blue-600 rounded border-gray-300 focus:ring-blue-500 mt-1 mr-3 cursor-pointer" checked
                                       data-price="@order.TongTienGioHang"
                                       data-magh="@order.MaGioHang"
                                       data-macb="@order.MaChuyenBay">
                                <div>
                                    <div class="flex items-center flex-wrap gap-2 mb-2">
                                        <span class="text-xs sm:text-sm font-semibold text-gray-900 bg-gray-100 px-3 py-1 rounded-full">@order.MaChuyenBay</span>
                                    </div>
                                    <div class="flex items-center text-amber-600 text-xs sm:text-sm">
                                        <i class="fas fa-clock mr-2"></i>
                                        <span class="font-medium">Chưa thanh toán</span>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-xl sm:text-2xl font-bold text-blue-600">@string.Format("{0:N0}đ", order.TongTienGioHang)</div>
                                <div class="text-xs sm:text-sm text-gray-500">@order.Tickets.Count hành khách</div>
                            </div>
                        </div>

                        <!-- Tuyến bay -->
                        <div class="bg-gray-50 rounded-lg p-4 mb-4">
                            <div class="flex items-center justify-between">
                                <div class="flex-1">
                                    <div class="text-xs sm:text-sm text-gray-600 mb-1">Điểm đi</div>
                                    <div class="text-lg sm:text-xl font-bold text-gray-900">@order.SanBayDiTen</div>
                                    <div class="text-xs sm:text-sm text-gray-600">@order.SanBayDiMa</div>
                                </div>
                                <div class="flex-1 flex flex-col items-center px-2 sm:px-4">
                                    <i class="fas fa-plane text-blue-600 text-xl sm:text-2xl mb-2"></i>
                                    <div class="w-full h-0.5 bg-blue-200 relative">
                                        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white px-2">
                                            <span class="text-xs text-gray-600 whitespace-nowrap">@order.ThoiGianBay</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex-1 text-right">
                                    <div class="text-xs sm:text-sm text-gray-600 mb-1">Điểm đến</div>
                                    <div class="text-lg sm:text-xl font-bold text-gray-900">@order.SanBayDenTen</div>
                                    <div class="text-xs sm:text-sm text-gray-600">@order.SanBayDenMa</div>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin chuyến -->
                        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 sm:gap-4 mb-4">
                            <div>
                                <div class="text-xs text-gray-600 mb-1">Ngày bay</div>
                                <div class="text-sm sm:text-base font-semibold text-gray-900">@order.NgayBay.Date.ToString("dd/MM/yyyy")</div>
                            </div>
                            <div>
                                <div class="text-xs text-gray-600 mb-1">Giờ khởi hành</div>
                                <div class="text-sm sm:text-base font-semibold text-gray-900">@order.GioCatCanh.ToString("hh:mm")</div>
                            </div>
                            <div>
                                <div class="text-xs text-gray-600 mb-1">Hạng ghế</div>
                                <div class="text-sm sm:text-base font-semibold text-gray-900">@order.HangGheChinh</div>
                            </div>
                        </div>

                        <!-- Xem thông tin hành khách -->
                        <button onclick="togglePassengerInfo('passenger-@order.MaGioHang')"
                                class="w-full bg-blue-50 hover:bg-blue-100 text-blue-700 px-4 py-3 rounded-lg font-medium transition-colors text-sm sm:text-base mb-4 flex items-center justify-between">
                            <span><i class="fas fa-users mr-2"></i>Xem thông tin hành khách (@order.Tickets.Count người)</span>
                            <i class="fas fa-chevron-down transition-transform" id="passenger-@order.MaGioHang-icon"></i>
                        </button>

                        <!-- Chi tiết hành khách -->
                        <div id="passenger-@order.MaGioHang" class="hidden bg-gray-50 rounded-lg p-4 mb-4 border border-gray-200">
                            @foreach (var tk in order.Tickets)
                            {
                                var index = order.Tickets.IndexOf(tk) + 1;
                                <div class="@(index < order.Tickets.Count ? "mb-6 pb-6 border-b border-gray-200" : "")">
                                    <div class="flex items-center justify-between mb-3">
                                        <h3 class="text-sm font-semibold text-gray-900 flex items-center">
                                            <i class="fas fa-user text-blue-600 mr-2"></i>Hành khách @index
                                        </h3>
                                        <span class="text-xs bg-blue-100 text-blue-700 px-2 py-1 rounded-full">Người lớn</span>
                                    </div>
                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                        <div><div class="text-xs text-gray-600 mb-1">Họ và tên</div><div class="text-sm font-semibold text-gray-900">@tk.TenHanhKhach</div></div>
                                        <div><div class="text-xs text-gray-600 mb-1">Giới tính</div><div class="text-sm font-semibold text-gray-900">@tk.GioiTinhHienThi</div></div>
                                        <div><div class="text-xs text-gray-600 mb-1">Ngày sinh</div><div class="text-sm font-semibold text-gray-900">@tk.NgaySinhFormatted</div></div>
                                        <div><div class="text-xs text-gray-600 mb-1">Số ghế</div><div class="text-sm font-semibold text-blue-600">@tk.SoGhe</div></div>
                                        <div><div class="text-xs text-gray-600 mb-1">Hạng ghế</div><div class="text-sm font-semibold text-gray-900">@tk.HangGhe</div></div>
                                        <div><div class="text-xs text-gray-600 mb-1">Giá vé</div><div class="text-sm font-bold text-blue-600">@tk.TongTienFormatted</div></div>
                                    </div>
                                </div>
                            }
                            <div class="mt-4 pt-4 border-t-2 border-blue-300 bg-blue-50 -mx-4 -mb-4 px-4 py-4 rounded-b-lg">
                                <div class="flex justify-between items-center">
                                    <span class="text-base font-semibold text-gray-900">Tổng cộng</span>
                                    <span class="text-2xl font-bold text-blue-600">@string.Format("{0:N0}đ", order.TongTienGioHang)</span>
                                </div>
                            </div>
                        </div>

                        <!-- Nút hành động -->
                        <div class="flex flex-col sm:flex-row gap-3">
                            <a href="@Url.Action("ThanhToan", "User", new { ids = order.MaGioHang.Trim(), cb =order.MaChuyenBay })"
                               class="flex-1 bg-blue-600 hover:bg-blue-700 text-white px-4 sm:px-6 py-3 rounded-lg font-semibold text-center transition-colors text-sm sm:text-base">
                                <i class="fas fa-credit-card mr-2"></i>Thanh toán ngay
                            </a>
                            <button onclick="window.location.href='@Url.Action("HuyVe","User",new {maGH = order.MaGioHang, MaCB= order.MaChuyenBay})'"
                                    class="sm:w-auto bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 sm:px-6 py-3 rounded-lg font-medium transition-colors text-sm sm:text-base">
                                <i class="fas fa-trash-alt mr-2"></i>Hủy vé
                            </button>
                        </div>
                    </div>
                </div>

                <script>
   // Đợi trang tải xong mới chạy lệnh này để tránh lỗi "not defined"
    document.addEventListener("DOMContentLoaded", function() {
        startCountdown(
            '@orderId',
            @remainingSeconds,
            '@Url.Action("HuyVe", "User", new { maGH = orderId, MaCB = order.MaChuyenBay })'
        );
    });
                </script>
            }
        }

        <!-- Thanh toán nhiều đơn cùng lúc (nếu có) -->
        @if (Model.UnpaidOrders.Any())
        {
            <div class="bg-white rounded-xl shadow-sm border border-gray-200 p-4 sm:p-6 sticky bottom-4 mt-6">
                <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                    <div>
                        <div class="text-sm text-gray-600 mb-1">Đã chọn <span id="selected-count" class="font-semibold text-blue-600">0</span> đơn đặt vé</div>
                        <div class="text-xl sm:text-2xl font-bold text-gray-900">Tổng: <span id="total-amount" class="text-blue-600">0đ</span></div>
                    </div>
                    <button id="btnThanhToanNhieu" disabled
                            class="w-full sm:w-auto bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white px-6 sm:px-8 py-3 sm:py-4 rounded-lg font-bold shadow-lg hover:shadow-xl transition-all text-sm sm:text-base opacity-50 cursor-not-allowed">
                        <i class="fas fa-credit-card mr-2"></i>Thanh toán tất cả
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- ====================== ĐÃ THANH TOÁN ====================== -->
    <div id="paid-section" class="tab-content hidden">
        @if (!Model.PaidOrders.Any())
        {
            <div class="text-center py-16 text-gray-500">
                <i class="fas fa-check-circle text-6xl mb-4 text-gray-300"></i>
                <p class="text-lg">Bạn chưa có vé nào đã thanh toán</p>
            </div>
        }
        else
        {
            foreach (var order in Model.PaidOrders)
            {
                <div class="bg-white rounded-xl shadow-sm border border-gray-200 mb-4 overflow-hidden hover:shadow-md transition-shadow">
                    <div class="p-4 sm:p-6">
                        <div class="flex items-start justify-between mb-4">
                            <div>
                                <div class="flex items-center flex-wrap gap-2 mb-2">
                                    <span class="text-xs sm:text-sm font-semibold text-gray-900 bg-gray-100 px-3 py-1 rounded-full">@order.MaChuyenBay</span>
                                    @if (order.Tickets.Any(t => !string.IsNullOrEmpty(t.MaVe)))
                                    {
                                        <span class="text-xs sm:text-sm font-semibold text-green-600 bg-green-100 px-3 py-1 rounded-full">
                                            Mã vé: @string.Join(", ", order.Tickets.Select(t => t.MaVe))
                                        </span>
                                    }
                                </div>
                                <div class="flex items-center text-green-600 text-xs sm:text-sm">
                                    <i class="fas fa-check-circle mr-2"></i>
                                    <span class="font-medium">Đã thanh toán</span>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="text-xl sm:text-2xl font-bold text-gray-900">@string.Format("{0:N0}đ", order.TongTienGioHang)</div>
                                <div class="text-xs sm:text-sm text-gray-500">@order.Tickets.Count hành khách</div>
                            </div>
                        </div>

                        <!-- Tuyến bay -->
                        <div class="bg-gray-50 rounded-lg p-4 mb-4">
                            <div class="flex items-center justify-between">
                                <div class="flex-1">
                                    <div class="text-xs sm:text-sm text-gray-600 mb-1">Điểm đi</div>
                                    <div class="text-lg sm:text-xl font-bold text-gray-900">@order.SanBayDiTen</div>
                                    <div class="text-xs sm:text-sm text-gray-600">@order.SanBayDiMa</div>
                                </div>
                                <div class="flex-1 flex flex-col items-center px-2 sm:px-4">
                                    <i class="fas fa-plane text-green-600 text-xl sm:text-2xl mb-2"></i>
                                    <div class="w-full h-0.5 bg-green-200 relative">
                                        <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 bg-white px-2">
                                            <span class="text-xs text-gray-600 whitespace-nowrap">@order.ThoiGianBay</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="flex-1 text-right">
                                    <div class="text-xs sm:text-sm text-gray-600 mb-1">Điểm đến</div>
                                    <div class="text-lg sm:text-xl font-bold text-gray-900">@order.SanBayDenTen</div>
                                    <div class="text-xs sm:text-sm text-gray-600">@order.SanBayDenMa</div>
                                </div>
                            </div>
                        </div>

                        <!-- Thông tin chuyến -->
                        <div class="grid grid-cols-2 sm:grid-cols-3 gap-3 sm:gap-4 mb-4">
                            <div><div class="text-xs text-gray-600 mb-1">Ngày bay</div><div class="text-sm sm:text-base font-semibold text-gray-900">@order.NgayBay.ToString("dd/MM/yyyy")</div></div>
                            <div><div class="text-xs text-gray-600 mb-1">Giờ khởi hành</div><div class="text-sm sm:text-base font-semibold text-gray-900">@order.GioCatCanh.ToString("hh/mm")</div></div>
                            <div><div class="text-xs text-gray-600 mb-1">Hạng ghế</div><div class="text-sm sm:text-base font-semibold text-gray-900">@order.HangGheChinh</div></div>
                        </div>

                        <!-- Chi tiết hành khách -->
                        <div class="bg-green-50 rounded-lg p-4 mb-4 border border-green-200">
                            @{
                                var totalPaid = 0m;
                            }
                            @foreach (var tk in order.Tickets)
                            {
                                totalPaid += tk.TongTienVe;

                                <div class="@(tk == order.Tickets.Last() ? "" : "mb-6 pb-6 border-b border-green-200")">
                                    <div class="flex items-center justify-between mb-3">
                                        <h3 class="text-sm font-semibold text-gray-900 flex items-center">
                                            <i class="fas fa-user text-green-600 mr-2"></i>Hành khách @(order.Tickets.IndexOf(tk) + 1)
                                        </h3>
                                        <span class="text-xs bg-green-100 text-green-700 px-2 py-1 rounded-full">Người lớn</span>
                                    </div>
                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                        <div>
                                            <div class="text-xs text-gray-600 mb-1">Họ và tên</div>
                                            <div class="text-sm font-semibold text-gray-900">@tk.TenHanhKhach</div>
                                        </div>
                                        <div>
                                            <div class="text-xs text-gray-600 mb-1">Giới tính</div>
                                            <div class="text-sm font-semibold text-gray-900">@tk.GioiTinh</div>
                                        </div>
                                        <div>
                                            <div class="text-xs text-gray-600 mb-1">Ngày sinh</div>
                                            <div class="text-sm font-semibold text-gray-900">@tk.NgaySinhFormatted</div>
                                        </div>
                                        <div>
                                            <div class="text-xs text-gray-600 mb-1">Quốc tịch</div>
                                            <div class="text-sm font-semibold text-gray-900">Việt Nam</div>
                                        </div>
                                        <div>
                                            <div class="text-xs text-gray-600 mb-1">Số điện thoại</div>
                                            <div class="text-sm font-semibold text-gray-900">@tk.SDT</div>
                                        </div>
                                        <div>
                                            <div class="text-xs text-gray-600 mb-1">Email</div>
                                            <div class="text-sm font-semibold text-gray-900">@tk.Email</div>
                                        </div>
                                        <div>
                                            <div class="text-xs text-gray-600 mb-1">Mã ghế</div>
                                            <div class="text-sm font-semibold text-green-600">@tk.SoGhe</div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(tk.MaVe) && tk.MaVe != "Đã thanh toán")
                                        {
                                            <div>
                                                <div class="text-xs text-gray-600 mb-1">Mã vé</div>
                                                <div class="text-sm font-bold text-green-600">@tk.MaVe</div>
                                            </div>
                                        }
                                    </div>
                                    <div class="mt-4 pt-4 border-t border-green-200">
                                        <div class="flex justify-between items-center">
                                            <span class="text-sm text-gray-600">Giá vé</span>
                                            <span class="text-lg font-bold text-green-600">@tk.TongTienFormatted</span>
                                        </div>
                                    </div>
                                </div>
                            }
                            <div class="mt-4 pt-4 border-t-2 border-green-300 bg-green-100 -mx-4 -mb-4 px-4 py-4 rounded-b-lg">
                                <div class="flex justify-between items-center">
                                    <span class="text-base font-semibold text-gray-900">Tổng cộng</span>
                                    <span class="text-2xl font-bold text-green-600">@totalPaid.ToString("N0")đ</span>
                                </div>
                            </div>
                        </div>

                        <div class="bg-blue-50 border border-blue-200 rounded-lg p-3 sm:p-4 mb-4">
                            <div class="flex items-center justify-between flex-wrap gap-2">
                                <div class="flex items-center">
                                    <i class="fas fa-info-circle text-blue-600 mr-2 sm:mr-3"></i>
                                    <span class="text-xs sm:text-sm text-blue-800">Check-in mở cửa từ 24 giờ trước giờ bay</span>
                                </div>
                                <span class="text-xs sm:text-sm font-semibold text-blue-600">
                                    Còn @((order.GioCatCanh - DateTime.Now).Days) ngày
                                </span>
                            </div>
                        </div>

                        <div class="flex flex-col sm:flex-row gap-3">
                            <button class="flex-1 bg-green-600 hover:bg-green-700 text-white px-4 sm:px-6 py-3 rounded-lg font-semibold transition-colors text-sm sm:text-base">
                                <i class="fas fa-plane-departure mr-2"></i>Check-in ngay
                            </button>
                            <button class="sm:w-auto bg-gray-100 hover:bg-gray-200 text-gray-700 px-4 sm:px-6 py-3 rounded-lg font-medium transition-colors text-sm sm:text-base">
                                <i class="fas fa-download mr-2"></i>Tải vé
                            </button>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</main>

<script>
    // Switch tab
    function switchTab(tab) {
        document.getElementById('unpaid-section').classList.toggle('hidden', tab !== 'unpaid');
        document.getElementById('paid-section').classList.toggle('hidden', tab === 'unpaid');
        document.getElementById('tab-unpaid').classList.toggle('active', tab === 'unpaid');
        document.getElementById('tab-unpaid').classList.toggle('border-blue-600', tab === 'unpaid');
        document.getElementById('tab-unpaid').classList.toggle('text-blue-600', tab === 'unpaid');
        document.getElementById('tab-paid').classList.toggle('active', tab === 'paid');
        document.getElementById('tab-paid').classList.toggle('border-blue-600', tab === 'paid');
        document.getElementById('tab-paid').classList.toggle('text-blue-600', tab === 'paid');
    }

    // Toggle chi tiết hành khách
    function togglePassengerInfo(id) {
        const el = document.getElementById(id);
        const icon = document.getElementById(id + '-icon');
        el.classList.toggle('hidden');
        icon.classList.toggle('rotate-180');
    }

    // Countdown riêng cho từng đơn
    function startCountdown(orderId, totalSeconds, cancelUrl) {
        console.log("Bắt đầu đếm ngược cho đơn: " + orderId + ", Giây: " + totalSeconds);

        // Nếu thời gian = 0 ngay từ đầu thì hiển thị 00:00 và dừng (hoặc hủy luôn tùy bạn)
        if (totalSeconds <= 0) {
            return;
        }

        let remaining = totalSeconds;

        // Cập nhật ngay lập tức lần đầu tiên để không phải đợi 1 giây
        updateDisplay(orderId, remaining);

        const interval = setInterval(() => {
            remaining--;

            updateDisplay(orderId, remaining);

            if (remaining <= 0) {
                clearInterval(interval);
                alert("Thời gian giữ chỗ đã hết. Vé của bạn sẽ bị hủy để nhường cho người khác.");
                // Hết giờ -> Gọi URL Hủy Vé
                window.location.href = cancelUrl;
            }
        }, 1000);

    }

    function updateDisplay(orderId, secondsLeft) {
        // Tính phút và giây
        const m = Math.floor(secondsLeft / 60);
        const s = secondsLeft % 60;

        // Format số đẹp (thêm số 0 đằng trước nếu < 10)
        const mStr = m < 10 ? "0" + m : m;
        const sStr = s < 10 ? "0" + s : s;

        // Tìm thẻ cha chứa data-order tương ứng
        const container = document.querySelector(`div[data-order='${orderId}']`);

        if (container) {
            const minEl = container.querySelector('.countdown-minutes');
            const secEl = container.querySelector('.countdown-seconds');

            if (minEl) minEl.innerText = mStr;
            if (secEl) secEl.innerText = sStr;
        } else {
            console.error("Không tìm thấy thẻ div có data-order=" + orderId);
        }
    }

    // Checkbox chọn thanh toán nhiều
    const checkboxes = document.querySelectorAll('.ticket-checkbox');
    const selectedCountEl = document.getElementById('selected-count');
    const totalAmountEl = document.getElementById('total-amount');
    const btnThanhToanNhieu = document.getElementById('btnThanhToanNhieu');

    function updateSelection() {
        let count = 0;
        let total = 0;
        let selectedMagh = [];

        checkboxes.forEach(cb => {
            if (cb.checked) {
                count++;
                total += parseInt(cb.dataset.price || 0);
                selectedMagh.push(cb.dataset.magh);
            }
        });

        selectedCountEl.textContent = count;
        totalAmountEl.textContent = total.toLocaleString('vi-VN') + 'đ';

        if (count > 0) {
            btnThanhToanNhieu.disabled = false;
            btnThanhToanNhieu.classList.remove('opacity-50', 'cursor-not-allowed');
        } else {
            btnThanhToanNhieu.disabled = true;
            btnThanhToanNhieu.classList.add('opacity-50', 'cursor-not-allowed');
        }
    }

    checkboxes.forEach(cb => cb.addEventListener('change', updateSelection));
    updateSelection(); // Khởi chạy lần đầu
    btnThanhToanNhieu.onclick = () => {
        const selectedMagh = [];
        const selectedMacb = [];

        document.querySelectorAll('.ticket-checkbox:checked').forEach(cb => {
            selectedMagh.push(cb.dataset.magh);
            selectedMacb.push(cb.dataset.macb);
        });

            const url = '@Url.Action("ThanhToan", "User")' + '?ids=' + selectedMagh.join(',') + '&cb=' + selectedMacb.join(',');
    window.location.href = url;
};

</script>