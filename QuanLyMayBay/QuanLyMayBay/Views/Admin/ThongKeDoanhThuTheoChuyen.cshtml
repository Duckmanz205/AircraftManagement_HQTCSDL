@model List<QuanLyMayBay.Models.Admin.DoanhThuChuyenBayViewModel>
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    Func<decimal, string> FormatCurrency = (amount) => String.Format("{0:N0} VND", amount);
}

<!-- Main Content -->
<main class="flex-1 p-4 lg:p-6">
    <!-- Page Header -->
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">Thống kê doanh thu theo chuyến bay</h2>
        <p class="text-gray-600">Doanh thu chi tiết từng chuyến bay sử dụng Cursor</p>
        <p class="text-sm text-blue-600 mt-2">
            <i class="fas fa-database mr-1"></i>
            Dữ liệu từ SQL Cursor: <code class="bg-gray-100 px-2 py-1 rounded">sp_ThongKeDoanhThuTheoChuyen</code>
            (Wrapper cho cursor lines 950-978 trong QLMayBay.sql)
        </p>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-lg mb-6">
            <i class="fas fa-exclamation-circle mr-2"></i>@ViewBag.Error
        </div>
    }

    <!-- Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mb-6">
        <div class="bg-white p-6 rounded-lg border border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Tổng chuyến bay</p>
                    <p class="text-2xl font-bold text-gray-900">@Model.Count()</p>
                </div>
                <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-plane text-blue-600 text-xl"></i>
                </div>
            </div>
        </div>
        <div class="bg-white p-6 rounded-lg border border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Tổng doanh thu</p>
                    <p class="text-xl font-bold text-gray-900">@FormatCurrency(Model.Sum(x => x.TongDoanhThu))</p>
                </div>
                <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-dollar-sign text-green-600 text-xl"></i>
                </div>
            </div>
        </div>
        <div class="bg-white p-6 rounded-lg border border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Doanh thu TB/chuyến</p>
                    <p class="text-lg font-bold text-gray-900">
                        @if (Model.Any())
                        {
                            @FormatCurrency(Model.Average(x => x.TongDoanhThu))
                        }
                        else
                        {
                            <text>0 VND</text>
                        }
                    </p>
                </div>
                <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-chart-line text-yellow-600 text-xl"></i>
                </div>
            </div>
        </div>
        <div class="bg-white p-6 rounded-lg border border-gray-200">
            <div class="flex items-center justify-between">
                <div>
                    <p class="text-sm font-medium text-gray-600">Chuyến bay cao nhất</p>
                    <p class="text-lg font-bold text-gray-900">
                        @if (Model.Any())
                        {
                            var top = Model.OrderByDescending(x => x.TongDoanhThu).FirstOrDefault();
                            @top.MaChuyenBay
                        }
                    </p>
                </div>
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
                    <i class="fas fa-trophy text-purple-600 text-xl"></i>
                </div>
            </div>
        </div>
    </div>

    <!-- Data Table -->
    <div class="bg-white rounded-lg border border-gray-200">
        <div class="p-6 border-b border-gray-200">
            <h3 class="text-lg font-semibold text-gray-900">Chi tiết doanh thu từng chuyến bay</h3>
        </div>
        <div class="overflow-x-auto">
            <table class="w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">STT</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã chuyến bay</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Tổng doanh thu</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">% Tổng</th>
                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Biểu đồ</th>
                    </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">
                    @if (Model.Any())
                    {
                        int stt = 1;
                        decimal tongDoanhThu = Model.Sum(x => x.TongDoanhThu);
                        foreach (var item in Model.OrderByDescending(x => x.TongDoanhThu))
                        {
                            double tyLe = tongDoanhThu > 0 ? (double)(item.TongDoanhThu / tongDoanhThu) * 100 : 0;
                            string badgeColor = item.TongDoanhThu > 0 ? "bg-green-100 text-green-800" : "bg-gray-100 text-gray-800";
                            <tr class="hover:bg-gray-50">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">@stt</td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                    <span class="px-2 py-1 @badgeColor rounded-md text-xs font-semibold">
                                        @item.MaChuyenBay
                                    </span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900 font-semibold">
                                    @FormatCurrency(item.TongDoanhThu)
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                    @tyLe.ToString("F1")%
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="w-full bg-gray-200 rounded-full h-2">
                                        <div class="bg-blue-600 h-2 rounded-full" style="width: @tyLe%"></div>
                                    </div>
                                </td>
                            </tr>
                            stt++;
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="px-6 py-4 text-center text-sm text-gray-500">Không có dữ liệu doanh thu.</td>
                        </tr>
                    }
                </tbody>
                <tfoot class="bg-gray-50 font-semibold">
                    <tr>
                        <td colspan="2" class="px-6 py-4 text-sm text-gray-900">Tổng cộng</td>
                        <td class="px-6 py-4 text-sm text-gray-900">@FormatCurrency(Model.Sum(x => x.TongDoanhThu))</td>
                        <td class="px-6 py-4 text-sm text-gray-500">100%</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <!-- Chart Section -->
    @if (Model.Any())
    {
        <div class="bg-white rounded-lg border border-gray-200 p-6 mt-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Biểu đồ doanh thu theo chuyến bay</h3>
            <div class="h-96">
                <canvas id="revenueChart"></canvas>
            </div>
        </div>
    }
</main>

<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
<script>
    @if (Model.Any())
    {
        <text>
        const data = @Html.Raw(Json.Encode(Model.OrderByDescending(x => x.TongDoanhThu)));
        const labels = data.map(item => item.MaChuyenBay);
        const values = data.map(item => item.TongDoanhThu / 1000000); // Convert to millions

        const ctx = document.getElementById('revenueChart');
        if (ctx) {
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Doanh thu (Triệu VND)',
                        data: values,
                        backgroundColor: 'rgba(59, 130, 246, 0.8)',
                        borderColor: 'rgba(37, 99, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: {
                            beginAtZero: true,
                            title: {
                                display: true,
                                text: 'Doanh thu (Triệu VND)'
                            }
                        },
                        x: {
                            title: {
                                display: true,
                                text: 'Mã chuyến bay'
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return 'Doanh thu: ' + context.parsed.y.toFixed(2) + ' triệu VND';
                                }
                            }
                        }
                    }
                }
            });
        }
        </text>
    }
</script>
