@model QuanLyMayBay.Models.Admin.DashboardViewModel
@{
    ViewBag.Title = "Trang chủ Admin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

    // Tạo biến culture để format tiền Việt Nam
    var cultureInfo = new System.Globalization.CultureInfo("vi-VN");
}
<!-- Main Content -->
<!-- KPI Cards -->
<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6 mb-6">
    <div class="bg-white p-4 lg:p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Doanh thu hôm nay</p>
                <p class="text-2xl lg:text-3xl font-bold text-blue-900 mt-1">
                    @Model.DoanhThuHomNay.ToString("#,##0", cultureInfo) VNĐ
                </p>
                <p class="text-sm @(Model.PhanTramDoanhThu >= 0 ? "text-green-600" : "text-red-600") mt-1">
                    @(Model.PhanTramDoanhThu >= 0 ? "+" : "")@Model.PhanTramDoanhThu% so với hôm qua
                </p>
            </div>
            <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M4 4a2 2 0 00-2 2v4a2 2 0 002 2V6h10a2 2 0 00-2-2H4zm2 6a2 2 0 012-2h8a2 2 0 012 2v4a2 2 0 01-2 2H8a2 2 0 01-2-2v-4zm6 4a2 2 0 100-4 2 2 0 000 4z" />
                </svg>
            </div>
        </div>
    </div>
    <div class="bg-white p-4 lg:p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Vé bán hôm nay</p>
                <p class="text-2xl lg:text-3xl font-bold text-blue-900 mt-1">@Model.VeBanHomNay</p>
                <p class="text-sm @(Model.PhanTramVeBan >= 0 ? "text-green-600" : "text-red-600") mt-1">
                    @(Model.PhanTramVeBan >= 0 ? "+" : "")@Model.PhanTramVeBan% so với hôm qua
                </p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
            </div>
        </div>
    </div>
    <div class="bg-white p-4 lg:p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Số chuyến đang bay</p>
                <p class="text-2xl lg:text-3xl font-bold text-blue-900 mt-1">@Model.ChuyenBayDangBay</p>
                <p class="text-sm text-blue-600 mt-1">Đúng giờ: @Model.ChuyenBayDungGio chuyến</p>
            </div>
            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
                </svg>
            </div>
        </div>
    </div>
    <div class="bg-white p-4 lg:p-6 rounded-lg border border-gray-200 shadow-sm">
        <div class="flex items-center justify-between">
            <div>
                <p class="text-sm font-medium text-gray-600">Tỷ lệ trễ chuyến</p>
                <p class="text-2xl lg:text-3xl font-bold text-blue-900 mt-1">@Model.TyLeTreChuyen%</p>
                <p class="text-sm text-red-600 mt-1">+@Model.PhanTramTreChuyen% so với hôm qua</p>
            </div>
            <div class="w-12 h-12 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                </svg>
            </div>
        </div>
    </div>
</div>

<!-- Charts Section -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Revenue Chart -->
    <div class="bg-white p-4 lg:p-6 rounded-lg border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Doanh thu 7 ngày gần nhất</h3>
        <div class="h-80 overflow-hidden">
            <canvas id="revenueChart" class="w-full h-full"></canvas>
        </div>
    </div>

    <!-- Top Flights Chart -->
    <div class="bg-white p-4 lg:p-6 rounded-lg border border-gray-200 shadow-sm">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Top 5 chuyến bán nhiều nhất</h3>
        <div class="h-80 overflow-hidden">
            <canvas id="topFlightsChart" class="w-full h-full"></canvas>
        </div>
    </div>
</div>

<!-- Recent Bookings Table -->
<div class="bg-white rounded-lg border border-gray-200 shadow-sm">
    <div class="p-4 lg:p-6 border-b border-gray-200">
        <h3 class="text-lg font-semibold text-gray-900">Phiếu đặt vé mới nhất</h3>
    </div>
    <div class="overflow-x-auto">
        <table class="w-full">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã phiếu</th>
                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Khách hàng</th>
                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Mã vé</th>
                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Ngày đặt</th>
                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Giá vé</th>
                    <th class="px-4 lg:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Trạng thái</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model.DanhSachPhieuDat)
                {
                    <tr class="hover:bg-gray-50">
                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-900">@item.MAPHIEU</td>
                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.TENKH</td>
                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap text-sm text-gray-900">@item.MAVE</td>
                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @(item.NGAYDAT.HasValue ? item.NGAYDAT.Value.ToString("dd/MM/yyyy") : "")
                        </td>
                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                            @item.GIATIEN.ToString("#,##0", cultureInfo)
                        </td>
                        <td class="px-4 lg:px-6 py-4 whitespace-nowrap">
                            @{
                                string bgColor = "";
                                string textColor = "";

                                switch (item.TRANGTHAI)
                                {
                                    case "Đã thanh toán":
                                        bgColor = "bg-green-100";
                                        textColor = "text-green-800";
                                        break;
                                    case "Chờ thanh toán":
                                        bgColor = "bg-yellow-100";
                                        textColor = "text-yellow-800";
                                        break;
                                    case "Hủy":
                                        bgColor = "bg-red-100";
                                        textColor = "text-red-800";
                                        break;
                                    default:
                                        bgColor = "bg-gray-100";
                                        textColor = "text-gray-800";
                                        break;
                                }
                            }
                            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full @bgColor @textColor">
                                @item.TRANGTHAI
                            </span>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Lấy dữ liệu từ Server (ViewModel) convert sang JSON để JS đọc được
        var revenueLabels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ChartLabels));
        var revenueData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ChartRevenueData));

        var flightLabels = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.TopFlightLabels));
        var flightData = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.TopFlightData));

        // -- VẼ BIỂU ĐỒ DOANH THU --
        var ctxRev = document.getElementById('revenueChart');
        if (ctxRev) {
            new Chart(ctxRev.getContext('2d'), {
                type: 'line',
                data: {
                    labels: revenueLabels,
                    datasets: [{
                        label: 'Doanh thu (VNĐ)',
                        data: revenueData,
                        borderColor: 'rgb(30, 64, 175)',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        tension: 0.3,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: { legend: { display: false } },
                    scales: {
                        y: {
                            beginAtZero: true,
                            ticks: {
                                callback: function(value) { return value.toLocaleString('vi-VN') + ' đ'; }
                            }
                        }
                    }
                }
            });
        }

        // -- VẼ BIỂU ĐỒ TOP CHUYẾN BAY --
        var ctxFlight = document.getElementById('topFlightsChart');
        if (ctxFlight) {
            new Chart(ctxFlight.getContext('2d'), {
                type: 'bar',
                data: {
                    labels: flightLabels,
                    datasets: [{
                        label: 'Số vé đã bán',
                        data: flightData,
                        backgroundColor: [
                            'rgba(59, 130, 246, 0.8)',
                            'rgba(16, 185, 129, 0.8)',
                            'rgba(245, 158, 11, 0.8)',
                            'rgba(239, 68, 68, 0.8)',
                            'rgba(139, 92, 246, 0.8)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        y: { beginAtZero: true }
                    }
                }
            });
        }
    });
</script>