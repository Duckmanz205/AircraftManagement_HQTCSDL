@{
    var controller = ViewContext.RouteData.Values["controller"].ToString();
    var action = ViewContext.RouteData.Values["action"].ToString();
    KHACHHANG KH = (KHACHHANG)Session["UserName"];
    string Image = (string)Session["Image"];
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkyBooking - Đặt vé máy bay</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.5/gsap.min.js"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1e40af',
                        secondary: '#f59e0b',
                        accent: '#fb923c'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 font-sans">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <i class="fas fa-plane text-blue-600 text-2xl mr-3"></i>
                    <span class="text-2xl font-bold text-blue-600">SkyBooking</span>
                </div>



                @if (KH != null)
                {
                    <!-- Navigation Menu -->
                    <nav class="hidden md:flex space-x-8">
                        <a href="@Url.Action("TrangChu","User")"
                           class=" @(controller == "User" && action == "TrangChu" ?
                            "navbar-item text-blue-600 active font-medium border-b-2 border-blue-600 pb-1":
                            "navbar-item text-gray-700 hover:text-blue-600 transition-colors")">
                            Trang chủ
                        </a>
                        <a href="@Url.Action("DatVe","User")"
                           class=" @(controller == "User" && action == "DatVe" ?
                             "navbar-item text-blue-600 active font-medium border-b-2 border-blue-600 pb-1":
                             "navbar-item text-gray-700 hover:text-blue-600 transition-colors")">Đặt Vé</a>
                        <a href="@Url.Action("VeCuaToi","User")"
                           class=" @(controller == "User" && action == "VeCuaToi" ?
                             "navbar-item text-blue-600 active font-medium border-b-2 border-blue-600 pb-1":
                             "navbar-item text-gray-700 hover:text-blue-600 transition-colors")">Vé của tôi</a>
                        <a href="@Url.Action("CheckIn","User")"
                           class=" @(controller == "User" && action == "CheckIn" ?
                             "navbar-item text-blue-600 active font-medium border-b-2 border-blue-600 pb-1":
                             "navbar-item text-gray-700 hover:text-blue-600 transition-colors")">Check-in</a>
                        <a href="@Url.Action("DangNhap","User")"
                           class=" @(controller == "User" && action == "LienHe" ?
                             "navbar-item text-blue-600 active font-medium border-b-2 border-blue-600 pb-1":
                             "navbar-item text-gray-700 hover:text-blue-600 transition-colors")">Liên hệ</a>
                    </nav>

                    <!-- User Profile Dropdown -->
                    <div class="flex items-center space-x-4">
                        <div class="relative group">
                            <button class="flex items-center space-x-3 bg-gray-50 hover:bg-gray-100 px-4 py-2 rounded-lg transition-colors">
                                <img src="@(Image==null?
                                      "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=40&h=40&fit=crop&crop=face"
                                      :Url.Content("~/Content/Images/User/"+Image))"
                                     alt="Avatar" class="w-8 h-8 rounded-full object-cover">
                                <div class="text-left hidden sm:block">
                                    <p class="text-sm font-medium text-gray-800">@KH.TENKH</p>
                                    <p class="text-xs text-gray-500">Premium Member</p>
                                </div>
                                <i class="fas fa-chevron-down text-gray-500 text-sm"></i>
                            </button>

                            <!-- Dropdown Menu -->
                            <div class="absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                                <div class="py-2">
                                    <div class="px-4 py-3 border-b border-gray-100">
                                        <p class="text-sm font-medium text-gray-800">@KH.TENKH</p>
                                        <p class="text-xs text-gray-500">@KH.EMAIL</p>
                                    </div>
                                    <a href="@Url.Action("HoSo","User")"
                                       class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                        <i class="fas fa-user mr-3 text-gray-400"></i>Hồ sơ cá nhân
                                    </a>
                                    <a href="@Url.Action("VeCuaToi","User")"
                                       class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                        <i class="fas fa-ticket-alt mr-3 text-gray-400"></i>Vé của tôi
                                    </a>
                                    <a href="@Url.Action("CaiDat","User")"
                                       class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                        <i class="fas fa-cog mr-3 text-gray-400"></i>Cài đặt
                                    </a>
                                    <div class="border-t border-gray-100 mt-2 pt-2">
                                        <a href="@Url.Action("DangXuat","User")"
                                           class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                            <i class="fas fa-sign-out-alt mr-3"></i>Đăng xuất
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Mobile Menu Button -->
                        <button class="md:hidden text-gray-700">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                    </div>
                }
                else
                {
                    <!-- Navigation Menu -->
                    <nav class="hidden md:flex space-x-8">
                        <a href="@Url.Action("GioiThieu","User")"
                           class=" @(controller == "User" && action == "GioiThieu" ?
                             "navbar-item text-blue-600 active font-medium border-b-2 border-blue-600 pb-1":
                             "navbar-item text-gray-700 hover:text-blue-600 transition-colors")">Trang chủ</a>
                        <a href="@Url.Action("DangNhap","User")"
                           class="text-gray-700 hover:text-blue-600 transition-colors">Đặt vé</a>
                        <a href="@Url.Action("DangNhap","User")"
                           class="text-gray-700 hover:text-blue-600 transition-colors">Vé của tôi</a>
                        <a href="@Url.Action("CheckIn","User")"
                           class=" @(controller == "User" && action == "CheckIn" ?
                             "navbar-item text-blue-600 active font-medium border-b-2 border-blue-600 pb-1":
                             "navbar-item text-gray-700 hover:text-blue-600 transition-colors")">Check-in</a>
                        <a href="@Url.Action("DangNhap","User")"
                           class="text-gray-700 hover:text-blue-600 transition-colors">Liên hệ</a>
                    </nav>

                    <!-- Nút đăng nhập -->
                    <div class="hidden md:block">
                        <button onclick="window.location.href='@Url.Action("DangNhap","User")'" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-700">
                            Đăng nhập
                        </button>
                    </div>
                }


            </div>
        </div>
    </header>
    @if (KH != null)
    {
        <nav class="bg-white border-b border-gray-200 sticky top-0 z-40">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between h-14">

                    <ul class="flex space-x-8 items-center">

                        <li class="relative group h-full flex items-center">
                            <button class="text-gray-700 hover:text-blue-600 font-medium flex items-center h-full">
                                Hãng Hàng Không <i class="fas fa-chevron-down ml-1 text-xs"></i>
                            </button>
                            <div class="absolute left-0 top-full w-48 bg-white border border-gray-200 shadow-lg rounded-b-lg hidden group-hover:block">
                                <form action="@Url.Action("LocChuyen", "User")" method="post">
                                    @if (Session["Hang"] != null)
                                    {
                                        var hangList = Session["Hang"] as List<string>;
                                        foreach (var hang in hangList)
                                        {
                                            <button type="submit" name="hang" value="@hang" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">@hang</button>
                                        }
                                    }

                                </form>
                            </div>
                        </li>

                        <li class="relative group h-full flex items-center">
                            <button class="text-gray-700 hover:text-blue-600 font-medium flex items-center h-full">
                                Mức Giá <i class="fas fa-chevron-down ml-1 text-xs"></i>
                            </button>
                            <div class="absolute left-0 top-full w-48 bg-white border border-gray-200 shadow-lg rounded-b-lg hidden group-hover:block">
                                <form action="@Url.Action("LocChuyen", "User")" method="post">
                                    <button type="submit" name="gia" value="duoi2" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">Dưới 2 triệu</button>
                                    <button type="submit" name="gia" value="2den5" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">Từ 2 - 5 triệu</button>
                                    <button type="submit" name="gia" value="tren5" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">Trên 5 triệu</button>
                                </form>
                            </div>
                        </li>

                        <li class="relative group h-full flex items-center">
                            <button class="text-gray-700 hover:text-blue-600 font-medium flex items-center h-full">
                                Giờ Bay <i class="fas fa-chevron-down ml-1 text-xs"></i>
                            </button>
                            <div class="absolute left-0 top-full w-56 bg-white border border-gray-200 shadow-lg rounded-b-lg hidden group-hover:block">
                                <form action="@Url.Action("LocChuyen", "User")" method="post">
                                    <button type="submit" name="gio" value="sang" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">Sáng sớm (06:00 - 12:00)</button>
                                    <button type="submit" name="gio" value="chieu" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">Buổi chiều (12:00 - 18:00)</button>
                                    <button type="submit" name="gio" value="toi" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-blue-50 hover:text-blue-600">Buổi tối (18:00 - 24:00)</button>
                                </form>
                            </div>
                        </li>
                    </ul>

                    <div class="flex items-center">
                        <button id="filterToggle" class="lg:hidden p-2 text-gray-600">
                            <i class="fas fa-filter"></i>
                        </button>
                    </div>
                </div>
            </div>
        </nav>
    }
    <!-- Hero Section with Search -->
    <section class="bg-gradient-to-br from-blue-50 to-indigo-100 pb-12 md:pb-20">
        @RenderBody()
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Company Info -->
                <div>
                    <div class="flex items-center mb-4">
                        <i class="fas fa-plane text-blue-400 text-2xl mr-3"></i>
                        <span class="text-2xl font-bold">SkyBooking</span>
                    </div>
                    <p class="text-gray-400 mb-4">Đặt vé máy bay dễ dàng, an toàn và tiện lợi nhất.</p>
                    <div class="flex space-x-4">
                        <i class="fab fa-facebook text-blue-400 text-xl cursor-pointer hover:text-blue-300"></i>
                        <i class="fab fa-twitter text-blue-400 text-xl cursor-pointer hover:text-blue-300"></i>
                        <i class="fab fa-instagram text-blue-400 text-xl cursor-pointer hover:text-blue-300"></i>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Liên kết nhanh</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Trang chủ</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Vé của tôi</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Check-in</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Khuyến mãi</a></li>
                    </ul>
                </div>

                <!-- Support -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Hỗ trợ</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Điều khoản sử dụng</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Hỗ trợ khách hàng</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">FAQ</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Liên hệ</h3>
                    <div class="space-y-2">
                        <p class="text-gray-400 flex items-center">
                            <i class="fas fa-phone mr-2"></i>1900 1234
                        </p>
                        <p class="text-gray-400 flex items-center">
                            <i class="fas fa-envelope mr-2"></i>support@skybooking.vn
                        </p>
                        <p class="text-gray-400 flex items-center">
                            <i class="fas fa-map-marker-alt mr-2"></i>Hà Nội, Việt Nam
                        </p>
                    </div>
                </div>
            </div>

            <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                <p class="text-gray-400">&copy; 2024 SkyBooking. Tất cả quyền được bảo lưu.</p>
            </div>
        </div>
    </footer>
</body>
</html>
