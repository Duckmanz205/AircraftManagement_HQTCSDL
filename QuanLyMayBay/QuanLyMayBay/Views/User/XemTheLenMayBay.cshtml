
@model QuanLyMayBay.Models.CheckInViewModel
@{
    ViewBag.Title = "XemTheLenMayBay";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<script>
    tailwind.config = {
        theme: {
            extend: {
                colors: {
                    primary: '#1E40AF',
                    'primary-dark': '#1E3A8A',
                    'primary-light': '#3B82F6',
                    'blue-50': '#EFF6FF',
                    'blue-100': '#DBEAFE'
                }
            }
        }
    }
</script>

<header class="bg-white shadow-sm border-b border-blue-100">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
        <div class="flex items-center justify-between">
            <div class="flex items-center gap-3">
                <a href="@Url.Action("CheckIn", "User")" class="p-2 hover:bg-blue-50 rounded-lg transition-colors">
                    <svg class="w-6 h-6 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                </a>
                <div>
                    <h1 class="text-2xl sm:text-3xl font-bold text-primary">Thẻ Lên Máy Bay</h1>
                    <p class="text-sm sm:text-base text-gray-600 mt-1">Thông tin chuyến bay của bạn</p>
                </div>
            </div>
            <button onclick="window.print()" class="hidden sm:flex items-center gap-2 px-4 py-2 bg-blue-50 text-primary rounded-lg font-semibold hover:bg-blue-100 transition-colors">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"></path>
                </svg>
                In thẻ
            </button>
        </div>
    </div>
</header>

<main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
    <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-blue-100">
            <!-- Header -->
            <div class="bg-gradient-to-r from-primary to-primary-light p-6 sm:p-8 text-white relative overflow-hidden">
                <div class="absolute top-0 right-0 -mt-10 -mr-10 w-40 h-40 bg-white/10 rounded-full blur-3xl"></div>
                <div class="absolute bottom-0 left-0 -mb-10 -ml-10 w-40 h-40 bg-white/10 rounded-full blur-3xl"></div>
                
                <div class="relative z-10 flex flex-col sm:flex-row justify-between items-center gap-6">
                    <div class="flex items-center gap-4">
                        <div class="w-12 h-12 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center">
                            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"></path>
                            </svg>
                        </div>
                        <div>
                            <p class="text-blue-100 text-sm font-medium">Hãng hàng không</p>
                            <h2 class="text-2xl font-bold">QAirline</h2>
                        </div>
                    </div>
                    <div class="text-center sm:text-right">
                        <p class="text-blue-100 text-sm font-medium">Hạng vé</p>
                        <p class="text-xl font-bold">@Model.HangGhe.ToUpper()</p>
                    </div>
                </div>
            </div>

            <!-- Flight Info -->
            <div class="p-6 sm:p-8 border-b border-dashed border-gray-200 relative">
                <div class="absolute -left-3 top-1/2 w-6 h-6 bg-gray-50 rounded-full"></div>
                <div class="absolute -right-3 top-1/2 w-6 h-6 bg-gray-50 rounded-full"></div>

                <div class="flex flex-col sm:flex-row justify-between items-center gap-8 mb-8">
                    <div class="text-center sm:text-left">
                        <p class="text-4xl font-bold text-primary mb-1">@Model.SanBayDiMa</p>
                        <p class="text-gray-600 font-medium">@Model.SanBayDiThanhPho</p>
                        <p class="text-sm text-gray-400 mt-1">@Model.SanBayDiTen</p>
                    </div>

                    <div class="flex-1 w-full sm:w-auto px-4">
                        <div class="flex flex-col items-center">
                            <p class="text-sm font-bold text-gray-500 mb-2">@Model.ThoiGianBay</p>
                            <div class="w-full h-0.5 bg-gray-200 relative flex items-center">
                                <div class="w-2 h-2 bg-primary rounded-full absolute left-0"></div>
                                <div class="w-full border-t-2 border-dashed border-gray-300"></div>
                                <div class="absolute left-1/2 -translate-x-1/2 bg-white p-1">
                                    <svg class="w-6 h-6 text-primary transform rotate-90" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"></path>
                                    </svg>
                                </div>
                                <div class="w-2 h-2 bg-primary rounded-full absolute right-0"></div>
                            </div>
                            <p class="text-xs text-gray-400 mt-2">Bay thẳng</p>
                        </div>
                    </div>

                    <div class="text-center sm:text-right">
                        <p class="text-4xl font-bold text-primary mb-1">@Model.SanBayDenMa</p>
                        <p class="text-gray-600 font-medium">@Model.SanBayDenThanhPho</p>
                        <p class="text-sm text-gray-400 mt-1">@Model.SanBayDenTen</p>
                    </div>
                </div>

                <div class="grid grid-cols-2 sm:grid-cols-4 gap-6">
                    <div class="bg-gray-50 p-3 rounded-lg">
                        <p class="text-xs text-gray-500 mb-1">Mã chuyến bay</p>
                        <p class="text-lg font-bold text-gray-900">@Model.MaCB</p>
                    </div>
                    <div class="bg-gray-50 p-3 rounded-lg">
                        <p class="text-xs text-gray-500 mb-1">Ngày bay</p>
                        <p class="text-lg font-bold text-gray-900">@Model.GioCatCanh.ToString("dd/MM")</p>
                    </div>
                    <div class="bg-gray-50 p-3 rounded-lg">
                        <p class="text-xs text-gray-500 mb-1">Giờ khởi hành</p>
                        <p class="text-lg font-bold text-gray-900">@Model.GioCatCanh.ToString("HH:mm")</p>
                    </div>
                    <div class="bg-gray-50 p-3 rounded-lg">
                        <p class="text-xs text-gray-500 mb-1">Cửa ra máy bay</p>
                        <p class="text-lg font-bold text-gray-900">--</p>
                    </div>
                </div>
            </div>

            <!-- Passenger Info -->
            <div class="p-6 sm:p-8 bg-gray-50/50">
                <div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
                    <div>
                        <p class="text-sm font-medium text-gray-500 mb-4 uppercase tracking-wider">Thông tin hành khách</p>
                        <div class="space-y-4">
                            <div>
                                <p class="text-xs text-gray-400">Họ và tên</p>
                                <p class="text-lg font-bold text-gray-900">@Model.TenHanhKhach.ToUpper()</p>
                            </div>
                            <div class="grid grid-cols-2 gap-4">
                                <div>
                                    <p class="text-xs text-gray-400">Mã vé</p>
                                    <p class="text-base font-semibold text-gray-900">@Model.MaVe</p>
                                </div>
                                <div>
                                    <p class="text-xs text-gray-400">Hành lý</p>
                                    <p class="text-base font-semibold text-gray-900">@((Model.HangLyXachTay ?? 0) + (Model.HangLyKyGui ?? 0))kg</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div>
                        <p class="text-sm font-medium text-gray-500 mb-4 uppercase tracking-wider">Ghế ngồi</p>
                        <div class="flex items-center gap-4">
                            <div class="w-20 h-20 bg-primary text-white rounded-2xl flex items-center justify-center shadow-lg shadow-blue-200">
                                <span class="text-3xl font-bold">@Model.SoGhe</span>
                            </div>
                            <div>
                                <p class="text-sm text-gray-600 mb-1">Trạng thái ghế</p>
                                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                                    Đã xác nhận
                                </span>
                            </div>
                        </div>
                        <div class="mt-6">
                            <div class="w-full h-16 bg-white border border-gray-200 rounded-lg flex items-center justify-center overflow-hidden">
                                <!-- Barcode giả lập -->
                                <div class="flex gap-1 h-10 items-center opacity-80">
                                    <div class="w-1 h-full bg-black"></div>
                                    <div class="w-2 h-full bg-black"></div>
                                    <div class="w-1 h-full bg-black"></div>
                                    <div class="w-3 h-full bg-black"></div>
                                    <div class="w-1 h-full bg-black"></div>
                                    <div class="w-2 h-full bg-black"></div>
                                    <div class="w-4 h-full bg-black"></div>
                                    <div class="w-1 h-full bg-black"></div>
                                    <div class="w-2 h-full bg-black"></div>
                                    <div class="w-1 h-full bg-black"></div>
                                    <div class="w-3 h-full bg-black"></div>
                                    <div class="w-1 h-full bg-black"></div>
                                    <div class="w-2 h-full bg-black"></div>
                                    <div class="w-1 h-full bg-black"></div>
                                    <div class="w-2 h-full bg-black"></div>
                                    <div class="w-3 h-full bg-black"></div>
                                    <div class="w-1 h-full bg-black"></div>
                                </div>
                            </div>
                            <p class="text-center text-xs text-gray-400 mt-1">Quét mã này tại quầy check-in</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <div class="bg-blue-50 p-4 text-center border-t border-blue-100">
                <p class="text-sm text-primary font-medium">Chúc quý khách có một chuyến bay tốt đẹp!</p>
            </div>
        </div>
        
        <div class="mt-6 text-center">
            <a href="@Url.Action("CheckIn", "User")" class="text-gray-500 hover:text-primary font-medium transition-colors">
                &larr; Quay lại danh sách vé
            </a>
        </div>
    </div>
</main>
